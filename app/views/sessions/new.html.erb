
<div class="container">
  <div class="row">
    <div class="col s6 offset-s3">
      <%= form_tag '/login' do %>

      <div class="input-field">
        <%= text_field_tag :email, nil, class: "validate"%>
        <label for="email">Email: </label>
      </div>

      <div class="input-field">
        <%= password_field_tag :password, nil, class: "validate"%>
        <label for="email">Password: </label>
      </div>
      <%= submit_tag :submit %>
      <% end %>
    </div>
  </div>
</div>
