<body class="form">

<br><br><br><br>
<div class="logoheader" style="text-align:center"><%= image_tag('logooo.png') %></div>

<div class="container">
  <div class="row">
    <div class="col s6 offset-s3">

      <%= form_tag '/login' do %>

      <div class="input-field">
          <%= text_field_tag :email, nil, class: "validate"%>
          <label for="email" style="color:#2196f3;">Email</label>
        </div>

        <div class="input-field">
            <%= password_field_tag :password, nil, class: "validate"%>
            <label for="email" style="color:#2196f3;">Password</label>
          </div>

      <div class="endbuttons" style="text-align:center;"><%= submit_tag :submit, {class: "waves-effect waves-blue blue btn"} %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Home", '/', {class: "waves-effect waves-blue blue btn"} %></div>
      <% end %>
    </div>
  </div>
</div>
</body>
