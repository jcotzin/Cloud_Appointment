<div class="container">
  <div class="row">
    <div class="col s6 offset-s3">
<%= form_tag '/login' do %>

<div class="input-field col s6 validate">
  Email: <%= text_field_tag :email%><br>
</div>

<div class="input-field col s6">
  Password: <%= password_field_tag :password %><br>
  <%= submit_tag "Submit" %>
</div>

<% end %>
</div>
</div>
</div>
